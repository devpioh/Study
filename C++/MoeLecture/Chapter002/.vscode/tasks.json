{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "build",
            "command": "g++",
            "args": [
                "-std=c++14",
                "-W",
                "-Wall",
                "-O2",
                "-o",
                "${workspaceRoot}\\Headers\\stdafx.h",
                "${workspaceRootFolderName}.exe",
                "*.cpp"
            ],
            "isBuildCommand": true
        }
    ]
}